#include "headers/projfuncs.h"

int main() {

	setvbuf(stdout, NULL, _IONBF, 0);
	setvbuf(stderr, NULL, _IONBF, 0);

	mainInput userChoice = MAIN;

	while (1) {
		switch (userChoice) {
		default:
		case MAIN:
			showMainWindow();
			break;
		case ADD:
			addStudent();
			showMainWindow();
			break;
		case DISPLAY:
			break;
		case SEARCH:
			break;
		case UPDATE:
			break;
		case AVGGPA:
			break;
		case MAXGPA:
			break;
		}

		scanf("%d", (int*) &userChoice);

		if (userChoice == EXIT)
			break;
	}

	puts(" ___________________________________________________ ");
	puts("|                                                   |");
	puts("|                  EXIT BYE BYE                     |");
	puts("|___________________________________________________|");

	return 0;
}
