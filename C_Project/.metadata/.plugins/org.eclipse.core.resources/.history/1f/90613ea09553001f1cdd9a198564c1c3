#include "headers/projfuncs.h"

int main() {

	setvbuf(stdout, NULL, _IONBF, 0);
	setvbuf(stderr, NULL, _IONBF, 0);

	mainInput userChoice = MAIN;

	node *stdList = nullptr;

	for (;;) {
		showMainWindow(&userChoice);

		if (userChoice == EXIT) {
			endProgram(&stdList);
			break;
		}

		switch (userChoice) {
		case ADD:
			addStudent(&stdList);
			break;
		case DISPLAY:
			dispAllStudents(&stdList);
			break;
		case SEARCH:
			searchById(&stdList);
			break;
		case UPDATE:
			updateById(&stdList);
			break;
		case DELETE:
			deleteById(&stdList);
			break;
		case AVGGPA:
			break;
		case MAXGPA:
			break;
		case MAIN:
		case EXIT:
		default:
			break;
		}
	}

	return 0;
}
